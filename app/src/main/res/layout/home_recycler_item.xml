<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/home_profile_img_id"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <LinearLayout
        android:id="@+id/home_profile_eats_imgs_layout_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/home_profile_img_id">

        <TextView
            android:id="@+id/home_profile_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/home_profile_eats_img1_id"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="3dp"/>
            <ImageView
                android:id="@+id/home_profile_eats_img2_id"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"/>
            <ImageView
                android:id="@+id/home_profile_eats_img3_id"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="3dp"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>