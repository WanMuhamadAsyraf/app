<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_recycler_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp">

    <ImageView
        android:id="@+id/home_profile_img_id"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        tools:src="@mipmap/ic_launcher"
        android:layout_alignParentTop="false" />

    <LinearLayout
        android:id="@+id/home_profile_eats_imgs_layout_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@id/home_profile_img_id">

        <TextView
            android:id="@+id/home_profile_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/fontDark"
            tools:text="John Doe" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/home_profile_eats_img1_id"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="3dp"
                tools:src="@mipmap/ic_launcher" />
            <ImageView
                android:id="@+id/home_profile_eats_img2_id"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                tools:src="@mipmap/ic_launcher" />
            <ImageView
                android:id="@+id/home_profile_eats_img3_id"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="3dp"
                tools:src="@mipmap/ic_launcher" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>